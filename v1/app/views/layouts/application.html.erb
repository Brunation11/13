<!DOCTYPE html>
<html>
  <head>
    <title>PersonalPortfolio</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="row">
      <div class="main-header col-12 center">
        <div id="main-header" class="static-width">
          <nav class="col-2 col-offset-3">
            <ul class="no-list-style">
              <li class= "nav-tab link"><%= link_to "Projects", projects_path, class: "link col-6 nav-tab" %></li>
              <li class= "nav-tab link"><%= link_to "Blog", posts_path, class: "link col-6 nav-tab" %></li>
            </ul>
          </nav>

          <div class="col-2">
            <div class="col-4 col-offset-4">

            <%= link_to image_tag("full-size-logo-black.png", id: "logo", class: "logo"), root_path %>


            </div>
          </div>

          <nav class="col-2">
            <ul class="no-list-style">
              <li class="nav-tab link"><%= link_to "About", root_path(anchor: "about"), id: "about-button", class: "link col-6 nav-tab" %></li>
              <li class="nav-tab link"><%= link_to "Contact", root_path(anchor: "contact"), id: "contact-button", class: "link col-6 nav-tab" %></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <%= yield %>

    <% if logged_in? %>
      <div class="logout col-12 center">
        <%= link_to 'Logout', logout_path, method: "delete", class: "button link" %>
      </div>
    <% end %>
  </body>
</html>
